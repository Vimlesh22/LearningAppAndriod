<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.learningapp">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningApp">
        <activity android:name=".TopicListActivity"></activity>
        <activity android:name=".CourseListActivity" />
        <activity android:name=".MaterialActivity" />
        <activity android:name=".UserInstructionActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Theme.LearningApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>